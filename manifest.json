{
  "manifest_version": 3,
  "name": "Tab Garden",
  "version": "0.1.0",
  "description": "Channel your productive energy into growing plants.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "idle"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}